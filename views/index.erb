<dl class="worldwide">
  <dt>Worldwide</dt>
  <dd><strong class="sph"><%= @worldwide_sph %></strong> <%= sph %></dd>
</dl>

<% if @personal_sph %>
<dl class="personal">
  <dt>Personal</dt>
  <dd><strong class="sph"><%= @personal_sph %></strong> <%= sph %></dd>
</dl>
<% end %>

<form id="new_solution" action="/" method="post">
  <fieldset>
    <h2>Did Somebody Just Say It?</h2>
  	<dl>
  		<dt>
  			<label for="solution_email">Optional Email</label>
  		</dt>
  		<dd>
  			<input type="email" name="email" value="<%= params[:email] %>" />
  		</dd>
  	</dl>
  	<p>
  		<input type="submit" value="Somebody said &ldquo;Solution&rdquo;" />
  	</p>
  </fieldset>
</form>

<blockquote id="jerk">
  <p>We don&rsquo;t need to know what the problem is &mdash; <strong>we have the solution!</strong></p>
  <img src="/images/business_meeting.png" />
</blockquote>