<% if @flash %>
	<% if @flash.errors.empty? %>
	<p>Somebody just said &ldquo;solution&rdquo;. I feel for you.</p>
	<% else %>
	<p>Couldn&rsquo;t log your &ldquo;solution&rdquo; at this time. Sorry about that.</p>
	<ul>
		<% @flash.errors.each do |e| %>
		<li><%= e %></li>
		<% end %>
	</ul>
	<% end %>
<% end %>

<form id="solution_new" action="/" method="post">
	<h4>Somebody Said &ldquo;Solution&rdquo;</h4>
	<dl>
		<dt>
			<label for="solution_email">Optional Email</label>
		</dt>
		<dd>
			<input type="email" name="email" />
		</dd>
	</dl>
	<p>
		<input type="submit" value="Log It!" />
	</p>
</form>

<ul>
	<% @solutions.each do |solution| %>
	<li>
		<%= solution.created_at.to_s %>
		<% unless solution.email == '' %>
			by <%= solution.email %>
		<% end %>
	</li>
	<% end %>
</ul>