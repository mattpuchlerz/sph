    <script type="text/javascript" charset="utf-8" src="/javascripts/app.js"></script>
  </head>
  
  <body>
    
    <section id="container">
      
      <header id="site_header">
        <h1 id="site_title">Solutions Per Hour</h1>
        <p id="site_tagline">Tracking the <em>Overuse of &ldquo;Solutions&rdquo;</em> Worldwide</p>
