      <section id="page_content">

        <section id="flash">
          <% [ :ok, :notice, :error ].each do |type| %>
            <% if flash[type] %>
            <div class="<%= type %>"><%= flash[type] %></div>
            <% end %>
          <% end %>
        </section>
    
        <%= yield %>
        
      </section>
      
      <footer id="site_footer">
        <p class="author">Another fine website created by <strong><em><a href="http://matt.puchlerz.com" title="Designer &amp; Web Developer">Matt Puchlerz</a></em></strong>.</p>
